{
  "name": "@timcharper/ai-pull-review",
  "version": "3.0.0-rc2",
  "description": "A GitHub Action that leverages Anthropic's Claude AI to provide intelligent analysis and review of pull requests.",
  "author": "Diego Maroto",
  "license": "MIT",
  "main": "bin/cli.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "jest",
    "start": "node bin/cli.js",
    "dev": "ts-node src/cli.ts",
    "pretty": "prettier --write .",
    "build": "esbuild src/cli.ts --bundle --platform=node --target=node22 --outfile=bin/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timcharper/ai-pull-review.git"
  },
  "bugs": {
    "url": "https://github.com/diekotto/ai-pull-review/issues"
  },
  "homepage": "https://github.com/diekotto/ai-pull-review#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "bin": {
    "ai-pull-review-cli": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "AI",
    "PR",
    "GHA",
    "cli",
    "code-review",
    "github-action"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.33.1",
    "@octokit/rest": "^21.1.1",
    "commander": "^13.0.0",
    "dotenv": "^16.4.7",
    "minimatch": "^10.0.1",
    "uuid": "^11.0.3"
  }
}
